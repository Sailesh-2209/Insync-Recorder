<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle -->
    <item>
        <shape android:shape="oval">
<!--            <padding-->
<!--                android:bottom="20dp"-->
<!--                android:left="20dp"-->
<!--                android:right="20dp"-->
<!--                android:top="20dp" />-->
            <size
                android:width="2dp"
                android:height="2dp" />
            <stroke
                android:width="2dp"
                android:color="#ff0000" />
        </shape>
    </item>
    <!-- Green circle in middle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <size
                android:width="2dp"
                android:height="2dp" />
            <stroke
                android:width="2dp"
                android:color="#00000000" />
        </shape>
    </item>
    <!-- Smaller red circle at front -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="8dp"
                android:height="8dp" />
            <solid android:color="#ff0000" />
        </shape>
    </item>
</layer-list>